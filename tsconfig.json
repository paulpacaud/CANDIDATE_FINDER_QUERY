{
  "compilerOptions": {
    "module": "commonjs",  // Use CommonJS module system
    "target": "ES2018",    // Choose a target that matches the Node.js version you're using
    "outDir": "./dist",    // Output directory for compiled files
    "rootDir": "./src",    // Root directory for source files
    "esModuleInterop": true,  // Enables compilation from modules with default exports
    "strict": true,       // Enables all strict type-checking options
    "skipLibCheck": true  // Skip type checking of declaration files
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}